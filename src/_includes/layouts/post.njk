---
layout: default
---

<article class="prose lg:prose-xl mx-auto px-4 py-12">
    <header class="mb-8">
        <h1>{{ title }}</h1>
        <time datetime="{{ page.date }}" class="text-gray-500">
            {{ page.date | readableDate }}
        </time>
        {% if description %}
        <p class="text-xl text-gray-500 mt-4">{{ description }}</p>
        {% endif %}
    </header>

    {{ content | safe }}
</article> 