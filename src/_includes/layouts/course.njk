---
layout: default
---

<article class="max-w-7xl mx-auto px-6 py-12">
  <div class="grid grid-cols-1 md:grid-cols-2">
    <!-- Course Info -->
    <div class="pr-12">
      <div class="flex items-center justify-between mb-6">
        <span class="px-3 py-1 text-xs font-medium bg-black text-white dark:bg-white dark:text-black rounded-full">{{ level }}</span>
        <div class="flex items-center gap-1">
          <div class="flex">
            {% for i in range(1, 6) %}
              <svg class="w-4 h-4 {% if i <= rating %}text-yellow-400{% else %}text-gray-200 dark:text-gray-700{% endif %}" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            {% endfor %}
          </div>
          <span class="text-sm font-medium ml-1">{{ rating }}</span>
          {% if reviewCount %}
            <span class="text-sm text-gray-500 ml-1">({{ reviewCount }} reviews)</span>
          {% endif %}
        </div>
      </div>

      <h1 class="text-3xl font-semibold mb-3">{{ title }}</h1>
      <p class="text-gray-600 dark:text-gray-400 mb-8">{{ description }}</p>

      <div class="flex items-center gap-2 text-sm text-gray-500 mb-8">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        {{ duration }}
        <span class="mx-2">â€¢</span>
        {{ category }}
      </div>

      <div class="mb-8">
        <h2 class="text-sm font-medium mb-4">What you'll learn:</h2>
        <ul class="space-y-3">
          {% for point in learningPoints %}
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-600 dark:text-gray-400">{{ point }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="prose dark:prose-invert max-w-none">
        {{ content | safe }}
      </div>
    </div>

    <!-- Course Preview -->
    <div>
      <div class="sticky top-8">
        <div class="bg-white dark:bg-gray-900 rounded-2xl overflow-hidden">
          <div class="relative aspect-[4/3] bg-gray-100 dark:bg-gray-800">
            {% if featured %}
              <div class="absolute top-4 left-4 z-10">
                <span class="px-3 py-1 text-xs font-medium bg-black text-white dark:bg-white dark:text-black rounded-full">Featured</span>
              </div>
            {% endif %}
            <img src="{{ image }}" alt="{{ title }}" class="absolute inset-0 w-full h-full object-cover">
          </div>
          
          <div class="p-8">
            <div class="flex gap-3">
              <button class="flex-1 px-6 py-2.5 text-center text-sm font-medium text-gray-700 bg-white border border-gray-200 rounded-full hover:bg-gray-50 transition">Preview</button>
              <button class="flex-1 px-6 py-2.5 text-center text-sm font-medium bg-black text-white rounded-full hover:bg-gray-900 transition">Learn More</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article> 